<fable>
  <!-- propriedades globais -->
  <property name="score" default="0"/>
  <property name="has_key" default="False"/>

  <!-- pÃ¡gina de introduÃ§Ã£o -->
  <page id="intro" bg="sky.png" bg_music="intro.mp3">
    <agent
      id="hero"
      image="hero.png"
      x="100"
      y="200"
      on_click="score = score + 10"
    />
  </page>

  <!-- pÃ¡gina principal -->
  <page id="main" bg="forest.png" bg_music="forest.mp3">
    <!-- sÃ³ aparece se score >= 10 -->
    <agent
      id="key"
      image="key.png"
      x="400"
      y="300"
      fab-if="score &gt;= 10"
      on_click="has_key = True"/>

    <!-- porta trancada vs destrancada -->
    <agent
      id="door"
      image="door_closed.png"
      x="500"
      y="200"
      fab-if="not has_key"/>
    <agent
      id="door"
      image="door_open.png"
      x="500"
      y="200"
      fab-if="has_key"/>
  </page>

  <!-- exemplo de loop: renderiza agentes definidos em JS -->
  <page id="gallery" bg="gallery.png">
    <container fab-for="npc in npcs">
      <agent
        id="{{npc.id}}"
        image="{{npc.image}}"
        x="{{npc.x}}"
        y="{{npc.y}}"
        fab-if="npc.visible"/>
    </container>
  </page>
</fable>
