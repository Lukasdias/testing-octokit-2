<fable>
  <!-- um contador simples -->
  <property name="count" default="0"/>
  <property name="name" default="lukas" />

  <!-- pÃ¡gina Ãºnica que mostra o contador e um botÃ£o clicÃ¡vel -->
  <page id="counter" bg_color="red">
    <!-- imagem que, ao ser clicada, incrementa `count` -->
    <agent
      id="button"
      image="hero.png"
      x="350"
      y="250"
      width="100"
      height="100"
      on_click="count = count + 1"/>

    <!-- texto que exibe o valor atual de `count` -->
    <agent
      id="display"
      text="{{ name }}"
      x="0"
      y="100" 
      color='blue'
      />
    
  </page>
</fable>