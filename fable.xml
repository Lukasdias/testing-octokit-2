<fable>
  <!-- contador inicial -->
  <property name="count" default="0"/>

  <!-- página única -->
  <page id="counter" bg_color="#fff">
    <!-- botão: imagem clicável que incrementa `count` -->
    <agent
      id="button"
      image="hero.png"
      x="350"
      y="250"
      width="100"
      height="100"
      on_click="count = count + 1"/>
    <!-- exibição do valor atual de `count` -->
    <agent
      id="display"
      text="Count: {{ count }}"
      x="320"
      y="100"
      font_size="32px"
      color="#000"/>
  </page>
</fable>
