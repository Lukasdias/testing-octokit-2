<fable>
  <!-- um contador simples -->
  <property name="count" default="0"/>

  <!-- página única que mostra o contador e um botão clicável -->
  <page id="counter" bg_color="red">
    <!-- imagem que, ao ser clicada, incrementa `count` -->
    <agent
      id="button"
      image="hero.png"
      x="350"
      y="250"
      width="100"
      height="100"
      on_click="count = count + 1"/>

    <!-- texto que exibe o valor atual de `count` -->
    <agent
      id="display"
      text="{{ count }}"
      x="0"
      y="100" 
      color='blue'
      />
    
  </page>
</fable>