<fable>
  <property name="count" default="25"/>
  <property name="count2" default="10" />
  <property name="MAX" default="2" />
  <page id="counter" bg_color="#fff">
    <agent
      id="button"
      image="hero.png"
      x="350"
      y="250"
      width="100"
      height="100"
      on_click="count = count * MAX; count2 += 20"/>
    <agent
      id="display"
      text="Count: {{ count }}"
      x="320"
      y="100"
      font_size="32px"
      color="#000"
    />
    <agent
      id="display2"
      text="Count: {{ count2 }}"
      x="320"
      y="140"
      font_size="32px"
      color="#000"
    />
  </page>
</fable>
