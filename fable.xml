<fable>
  <property name="count" default="25"/>
  <page id="counter" bg_color="#fff">
    <agent
      id="button"
      image="hero.png"
      x="350"
      y="250"
      width="100"
      height="100"
      on_click="count = count + 1"/>
    <agent
      id="display"
      text="Count: {{ count }}"
      x="320"
      y="100"
      font_size="32px"
      color="#000"/>
  </page>
</fable>
